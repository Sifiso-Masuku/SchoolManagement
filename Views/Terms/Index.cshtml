@model IEnumerable<SchoolManagement.Models.Entity.Term>

@{
    ViewBag.Title = "Index";
}

<h2>School Terms</h2>

<p class="btn btn-success" style="color:white !important; margin-bottom:20px">
    @Html.ActionLink("Add a new term", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.ID })" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
            <a href="@Url.Action("Details", new { id=item.ID })" class="btn btn-success"><span class="glyphicon glyphicon-info-sign"></span></a>
            <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>

        </td>
    </tr>
}

</table>
