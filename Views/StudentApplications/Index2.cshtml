@model IEnumerable<SchoolManagement.Model.Entity.StudentApplication>

<div class="page-header">
    <h1>
        Your Application details
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            @*@Html.ActionLink("Create New", "Create")*@
        </small>
    </h1>
</div>
<div class="row">
    <div class="col-xs-12">
        <table id="simple-table" class="table  table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassName.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>

                    @*<th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.NID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HomeLanguage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Race)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PresentAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParmanentAddress)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Religion)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GuardianName)
                    </th>
                    <th>Action</th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>

                @*<td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.NID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeLanguage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PresentAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParmanentAddress)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Religion)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>

                    <a href="@Url.Action("SubjectView", "Subject", new { id = item.ClassNameId })" rel="tooltip" title="Register" class="btn btn-primary btn-simple btn-xs">View Subjects<i class="fa fa-registered" aria-hidden="true"></i></a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuardianName)
                </td>
                <td>
                    @if (item.Status == "Accepted")
                    {
                <a href="@Url.Action("AcceptOffer", "StudentApplications", new { id = item.Id })" onclick="return confirm('Are you sure you want to Accept this Offer, click Ok to Confirm, Or Cancel');" rel="tooltip" title="Accept Offer" class="btn btn-success btn-simple btn-xs"><i class="fa fa-check" aria-hidden="true"></i></a>}

                    @if (item.Status == "Offer Accepted")
                    {
                <a href="@Url.Action("OnceOff", "StudentApplications", new { id = item.Id })" onclick="return confirm('Are you sure you want to Pay deposit fee, click Ok to Confirm, Or Cancel');" rel="tooltip" title="Pay" class="btn btn-primary btn-simple btn-xs"><i style="font-size:24px" class="fa">&#xf1ed;</i></a>}

                    @if (item.Status == "Deposit Paid")
                    {
                <a href="@Url.Action("register", "StudentApplications", new { id = item.Id })" onclick="return confirm('Are you sure you want to register, click Ok to Confirm, Or Cancel');" rel="tooltip" title="Register" class="btn btn-success btn-simple btn-xs"><i class="fa fa-registered" aria-hidden="true"></i></a>}
                </td>
            </tr>
                    }

                </thead>
        </table>
    </div>
</div>
