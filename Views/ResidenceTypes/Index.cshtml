@model IEnumerable<SchoolManagement.Models.ResidenceType>

@{
    ViewBag.Title = "Index";
}

<h2>Residence Types</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResidenceTypeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResidenceTypeName)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id=item.ResidenceTypeId })" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("Details", new { id=item.ResidenceTypeId })" class="btn btn-success"><span class="glyphicon glyphicon-info-sign"></span></a>
                <a href="@Url.Action("Delete", new { id = item.ResidenceTypeId })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
