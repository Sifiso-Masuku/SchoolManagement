@model IEnumerable<SchoolManagement.Models.ResidenceType>

@{
    ViewBag.Title = "ResidenceTyoeView";
}


<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 190px;
        margin: auto;
        text-align: center;
        height: 150px !important;
        margin-bottom: 20px !important;
        border: groove !important;
        margin-top: 20px !important;
    }


    .top-head {
        align-content: center;
        text-align: center !important;
    }
</style>

<h2>Residence Type View</h2>




@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="holder.js/100x180/" alt="">
            <div class="card-body">
                <h4 class="card-title">
                    @Html.DisplayFor(modelItem => item.ResidenceTypeName)
                </h4>
                <p><a class="btn btn-default" onclick="location.href='@Url.Action("ResidenceView","Residences", new { id=item.ResidenceTypeId})'">Go To Residences </a></p>

            </div>
        </div>
    </div>
}

