@model IEnumerable<SchoolManagement.Models.CartModels.Order_Tracking>

@{
    ViewBag.Title = "Order Tracking";
}
<style type="text/css">
    
.stepwizard-step p {
    margin-top: 10px;    
}

.stepwizard-row {
    display: table-row;
}

.stepwizard {
    display: table;     
    width: 100%;
    position: relative;
}

.stepwizard-step button[disabled] {
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
}

.stepwizard-row:before {
    top: 14px;
    bottom: 0;
    position: absolute;
    content: " ";
    width: 100%;
    height: 1px;
    background-color: #ccc;
    z-order: 0;
    
}

.stepwizard-step {    
    display: table-cell;
    text-align: center;
    position: relative;
}

.btn-circle {
  width: 30px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.428571429;
  border-radius: 15px;
}
</style>
<h2 class="title text-center">@ViewBag.Title</h2>

<div class="row">
    <div>
        <table class="table">
            <tr >
                <th>Order ID</th>
                <th>
                    @{
                        var order = (SchoolManagement.Models.CartModels.Order)ViewBag.Order;
                    }
                    @order.Order_ID
                </th>
            </tr>
            <tr>
                <th>Date</th>
                <td><i class="fa fa-calendar"></i> @order.date_created.ToLongDateString()  <i class="fa fa-clock-o"></i> @order.date_created.ToLongTimeString()</td>
            </tr>
            <tr>
                <th>Delivered By</th>
                <td>

                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <div class="stepwizard">
        <div class="stepwizard-row">
            <div class="stepwizard-step">
                @if (order.status.ToLower().Contains("Awaiting Payment".ToLower()))
                {
                    <button type="button" class="btn btn-primary btn-circle">1</button>
                }
                else
                {
                    <button type="button" class="btn btn-default btn-circle">1</button>
                }                
                <p>Awaiting Payment</p>
            </div>
            <div class="stepwizard-step">
                @if (order.status.ToLower().Contains("At warehouse".ToLower()))
                {
                    <button type="button" class="btn btn-primary btn-circle">2</button>
                }
                else
                {
                    <button type="button" class="btn btn-default btn-circle">2</button>
                }             
                <p>At warehouse</p>
            </div>
            <div class="stepwizard-step">
                @if (order.status.ToLower().Contains("With courier".ToLower()))
                {
                    <button type="button" class="btn btn-primary btn-circle">3</button>
                }
                else
                {
                    <button type="button" class="btn btn-default btn-circle">3</button>
                }    
                <p>With courier</p>
            </div>
            <div class="stepwizard-step">
                @if (order.status.ToLower().Contains("Scheduled for delivery".ToLower()))
                {
                    <button type="button" class="btn btn-primary btn-circle">4</button>
                }
                else
                {
                    <button type="button" class="btn btn-default btn-circle">4</button>
                }    
                <p>Scheduled for delivery</p>
            </div>
            <div class="stepwizard-step">
                @if (order.status.ToLower().Contains("En route for delivery".ToLower()))
                {
                    <button type="button" class="btn btn-primary btn-circle">5</button>
                }
                else
                {
                    <button type="button" class="btn btn-default btn-circle">5</button>
                }
                <p>En route for delivery</p>
            </div>
            <div class="stepwizard-step">
                @if (order.status.ToLower().Equals("Delivered".ToLower()))
                {
                    <button type="button" class="btn btn-primary btn-circle">6</button>
                }
                else
                {
                    <button type="button" class="btn btn-default btn-circle">6</button>
                }
                <p>Delivered</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <p></p>
    <h2 class="title text-center">@ViewBag.Title Report</h2>
    <table class="table">
        <tr class="table-header-row">
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Recipient</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @item.date.ToLongDateString()
                </td>
                <td>
                   @item.date.ToLongTimeString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipient)
                </td>            
            </tr>
        }

    </table>
</div>
