@model IEnumerable<SchoolManagement.Model.Entity.Student>

@{ ViewBag.Title = "Index"; }
<h2>Student Details</h2>
<table class="table table-hover table-striped table-responsive" id="my_list">
    <thead>
        <tr class="table-header-row">
            <th>
                @Html.DisplayNameFor(model => model.StudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BalanceDue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Action
            </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.StudentNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.BalanceDue)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>

    <td>
        <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-success"><span class="glyphicon glyphicon-info-sign"></span></a>
        <a href="@Url.Action("ViewReports","Students", new { id = item.Id})" class="btn btn-sm btn-primary">View</a>
        @if (item.Status == "Registered")
        {
<a href="@Url.Action("OnceOff", "Students", new { id = item.Id })" onclick="return confirm('Are you sure you want to Pay deposit fee, click Ok to Confirm, Or Cancel');" rel="tooltip" title="Pay" class="btn btn-primary btn-simple btn-xs"><i style="font-size:24px" class="fa">&#xf1ed;</i></a>}

    </td>
</tr>}
    </tbody>
</table>

<script type="text/javascript">
    $('#my_list').dataTable(
        {
            dom: 'Bfrtip',
            lengthMenu: [
                [10, 25, 50, -1],
                ['10 rows', '25 rows', '50 rows', 'Show all']
            ],
            buttons: [
                'pageLength', 'csv', 'print'
            ],
            //language: { search: "" },
            //select: true
        }
    );
    $(".dataTables_filter input").addClass("search-input");
    $(".dataTables_filter input").attr('placeholder', 'Search');
    $('#my_list')
        .removeClass('display')
        .addClass('table table-striped table-hover');</script>